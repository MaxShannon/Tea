<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title MAX</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-default box-shadow navbar-fixed-top">
  
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("应用程序名称", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="nav-item"><a class="nav-link text-dark" href="@Url.Action("Index", "SupplyInfo")">供应商管理</a></li>
                    <li class="nav-item"><a class="nav-link text-dark" href="@Url.Action("Index", "CategoryInfo")">品种管理</a></li>
                    <li class="nav-item"><a class="nav-link text-dark" href="@Url.Action("Index", "UserInfo")">用户管理</a></li>
                    <li class="nav-item"><a class="nav-link text-dark" href="@Url.Action("Index", "ProjectInfo")">项目管理</a></li>
                    <li class="nav-item"><a class="nav-link text-dark" href="@Url.Action("Index", "CargoInfo")">商品管理</a></li>
                    <li class="nav-item"><a class="nav-link text-dark" href="@Url.Action("Index", "CargoLogInfo")">库存记录</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year Belong to Max</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
